    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch Example",
            "type": "pwa-node",
            "request": "launch",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}/example/index.ts",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Compile Data",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceFolder}/compileYaml.js",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}
