{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "out",
    "plugins": [
      { "transform": "typescript-is/lib/transform-inline/transformer" }
    ],
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es5",
  },
  "include": ["./src/**/*", "./example/**/*"]
}
